{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "react-app"
  ],
  "globals": {
    "document": true,
    "window": true,
    "$": true,
    "XMLHttpRequest": true,
    "allowTemplateLiterals": true,
  },
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "no-console": [
      1,
      {
        "allow": [
          "error",
          "warn"
        ]
      }
    ],
    "no-return-assign": ["error", "always"],
    "no-debugger": 1,
    "no-plusplus": 0,
    "class-methods-use-this": 0,
    "linebreak-style": 0,
    "max-len": [
      1,
      200,
      2
    ]
  }
}